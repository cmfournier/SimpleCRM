@model SimpleCRM.ViewModels.AddCampaignViewModel

    <form asp-controller="Campaign" asp-action="Add" method="post">
        

        <div class="form-group">
            <label asp-for="CampaignCode"></label>
            <input class="form-control" asp-for="CampaignCode" />
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="CampaignCode"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CampaignDescription"></label>
            <input class="form-control" asp-for="CampaignDescription" />
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="CampaignDescription"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CampaignMonth"></label>
            <input class="form-control" asp-for="CampaignMonth" />
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="CampaignMonth"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CampaignYear"></label>
            <input class="form-control" asp-for="CampaignYear" />
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="CampaignYear"></span>
            </div>
        </div>

        <input type="submit" value="Add Campaign" />

    </form>