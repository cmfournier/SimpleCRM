
@model SimpleCRM.Models.Donor;


<div class="text-center">
    <h1>Donor Management</h1>
</div>

<form asp-controller="Donor" asp-action="Index" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="DDonor">Donor ID</label>
            <input class="form-control" asp-for="DDonor" />
            <span asp-validation-for="DDonor"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input class="form-control" asp-for="Address" />
        <span asp-validation-for="Address"></span>

    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="City">City</label>
            <input class="form-control" asp-for="City" />
            <span asp-validation-for="City"></span>
        </div>


        <div class="form-group col-md-4">
            <label asp-for="State">State</label>
            <input class="form-control" asp-for="State" />
            <span asp-validation-for="State"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Zip">ZIP Code</label>
            <input class="form-control" asp-for="Zip" />
            <span asp-validation-for="Zip"></span>
        </div>
    </div>

    <input type="submit" value="Search Donors" /> <div class="text-danger" style="display:block;">Search is under construction.</div>

</form>
<div><a href="/Donor/Add">Add a new donor</a></div>
