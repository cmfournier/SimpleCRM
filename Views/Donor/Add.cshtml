@model SimpleCRM.ViewModels.AddDonorViewModel

<div class="text-center">
    <h1>Donor Management</h1>
</div>

<form asp-controller="Donor" asp-action="Add" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Address"></label>
        <input class="form-control" asp-for="Address" />
        <span asp-validation-for="Address"></span>

    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="City"></label>
            <input class="form-control" asp-for="City" />
            <span asp-validation-for="City"></span>
        </div>


        <div class="form-group col-md-4">
            <label asp-for="State"></label>
            <input class="form-control" asp-for="State" />
            <span asp-validation-for="State"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Zip"></label>
            <input class="form-control" asp-for="Zip" />
            <span asp-validation-for="Zip"></span>
        </div>
    </div>

    <input type="submit" value="Add Donor" />


</form>


